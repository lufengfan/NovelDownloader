<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:NovelDownloader.Tool.OnlineNovelDownloaderPluginCreater.Controls">


    <Style TargetType="{x:Type local:HtmlDocumentViewer}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:HtmlDocumentViewer}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <FlowDocumentScrollViewer>
                            <FlowDocument>
                                <Paragraph>
                                    <Run Text="First" Foreground="Black" Cursor="Arrow"></Run>
                                    <Run Text="Run" Foreground="DarkGreen" Cursor="Hand"></Run>
                                    <Run Text="Last" Foreground="Black" Cursor="Arrow"></Run>
                                </Paragraph>
                            </FlowDocument>
                        </FlowDocumentScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
